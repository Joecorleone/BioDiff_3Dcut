reset
set encoding utf8
set view map  
set term pdf enhanced
set output 'Biodiff_overview.pdf'
set pm3d interpolate 1,1
set palette positive nops_allcF maxcolors 0 gamma 1.5 color model RGB
set palette defined ( 0 "midnight-blue", 0.25 "cyan", 0.4 "yellow",  0.7 "red", 1.0 "dark-red")
set ylabel 'Q_y'
set xlabel 'Q_x'
set colorbox
show colorbox
set cbrange [200:800]
set title ''
set size square
set border lw 0.6
set tics scale 0.5


set title 'hk-1 at 4K, Q_z:[-0.8,-0.6]'
splot [-1.3:2.6][-0.8:3.1][0.001:] 'cut04K_hk-1.map' u 1:2:($3*1) with pm3d notitle

set title 'hk0 at 4K, Q_z:[-0.1,0.1]' 
splot [-1.3:2.6][-0.8:3.1][0.001:] 'cut04K_hk0.map' u 1:2:($3*1) with pm3d notitle

set title 'hk1 at 4K, Q_z:[0.5,0.7]'
splot [-1.3:2.6][-0.8:3.1][0.001:] 'cut04K_hk1.map' u 1:2:($3*1) with pm3d notitle

set title 'hk-1 at80K, Q_z:[-0.8,0.6]'
splot [-1.3:2.6][-0.8:3.1][0.001:] 'cut80K_hk-1.map' u 1:2:($3*1) with pm3d notitle

set title 'hk0 at 80K, Q_z:[-0.1,0.1]'
splot [-1.3:2.6][-0.8:3.1][0.001:] 'cut80K_hk0.map' u 1:2:($3*1) with pm3d notitle

set title 'hk1 at 80K, Q_z:[0.5,0.8]'
splot [-1.3:2.6][-0.8:3.1][0.001:] 'cut80K_hk1.map' u 1:2:($3*1) with pm3d notitle

set size ratio 0.7
set title 'at 4K, Q_x:[-0.7,-0.5]'
splot [0.:3.0][-1.1:1.1][0.001:] 'cut04K_Qx-0.6.map' u 1:2:($3*1) with pm3d notitle

set title 'at 4K, Q_x:[1.7,2.0]'
splot [-0.55:2.3][-1.1:1.1][0.001:] 'cut04K_Qx1.8.map' u 1:2:($3*1) with pm3d notitle

set title 'at 80K, Q_x:[-0.7,-0.5]'
splot [0.:3.0][-1.1:1.1][0.001:] 'cut80K_Qx-0.6.map' u 1:2:($3*1) with pm3d notitle

set title 'at 80K, Q_x:[1.7,2.0]'
splot [-0.55:2.3][-1.1:1.1][0.001:] 'cut80K_Qx1.8.map' u 1:2:($3*1) with pm3d notitle
